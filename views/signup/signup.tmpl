{{ template "header" .}}
<body>
	<header>
		<div class="bg-secondary">
			<div class="text-left text-white display-4 pl-4">
				BOOK MANAGE
			</div>
		</div>
	</header>
	<div class="mt-4">
		<div class="text-center bg-info mx-auto rounded" style="width: 600px">
			<h2 class="text-white pt-4">新規登録</h2>
			<form action="/signup" method="post">
				<div class="formgroup mx-5 text-left">
					<label for="name" class="text-white">ログインID</label>
					<input type="text" id="name" name="name" class="form-control">
				</div>
				<div class="formgroup mx-5 text-left mt-3">
					<label for="password" class="text-white">パスワード</label>
					<input type="password" id="password" name="password" class="form-control">
				</div>
				<div>
					<a href="/login" class="btn btn-danger my-4 mr-4">ログイン</a>
					<input type="submit" name="submit" value="新規登録" class="btn btn-danger">
				</div>
			</form>
		</div>
	</div>

{{ template "footer"}}
